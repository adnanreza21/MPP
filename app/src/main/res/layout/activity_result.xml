<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bluetext"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView

        android:background="@color/birumud"
        android:id="@+id/txt22"
        android:textAlignment="center"
        android:layout_below="@id/txt11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nilai"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_marginTop="@dimen/_70sdp"
        android:gravity="center"
        android:layout_below="@id/txt22"
        android:textColor="@color/white"
        android:textSize="@dimen/_37sdp"
        android:text="Nilaimu : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textScore"/>

    <Button
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_below="@id/textScore"
        android:id="@+id/but1"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/bluetext"
        android:text="Try Again"
        android:background="@drawable/custom_button"
        android:layout_width="@dimen/_120sdp"
        android:onClick="onClick"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageView

        android:id="@+id/back"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />


</RelativeLayout>